<section class="member-detail my-2" data-controller="edit-members">

  <div class="d-flex justify-content-end d-none me-3" data-edit-members-target="toggable">
    <div data-controller="group-member" data-group-member-group-id-value="<%= @group.id %>">
      <%= render 'shared/linkShare' %>
    </div>
  </div>

  <div class="section__title--groups m-2">
    <div class="line-groups"></div>
      <h2 class="section__h2--groups"><%= Group.find(@members.first.group_id).name %></h2>
    <div class="line-groups"></div>
  </div>

  <div class="d-flex w-100 justify-content-center mb-2">
    <h2 class="form-title" >Members Rank</h2>
  </div>

  
  <div class="d-flex flex-column px-3" >
    <% @sorted_positions.each_with_index do |user, index| %>
      <div class="membercard mb-2" data-edit-members-target="memberCard">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-2 ">
                <i class="fa-solid fa-user members-avatar"></i>
              </div>
              <div class="col-10">
                <div class="d-flex justify-content-between my-0">
                  <h5 class="card-member-name"><%= user[:username] == current_user.username ?  "Your position" : user[:username] %></h5>

                </div>

                  <p class="my-0"><%= index + 1 %> Place!</p>
                  <div class="progress my-0">
                    <div class="progress-bar" role="progressbar" style="width: <%= user[:average_progress]*100.round(2) %>%">
                      <%= (user[:average_progress]*100).round(2) %>%
                    </div>
                  </div>


              </div>
            </div>
          </div>

          <div class="d-none" data-edit-members-target="toggable">
            <%= link_to member_path(Member.find_by(group_id: params[:group_id], user_id: user[:user_id])),
                        data: { turbo_method: :delete,
                                turbo_confirm: "Are you sure?"},
                        class: "delete-button" do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>

        </div>
    <% end %>

    <% if  current_user.members.find_by(group_id: params[:group_id]).admin %>
      <div class="d-flex w-100 justify-content-center mt-5">
        <button class="btn btn-primary w-75" data-action="click->edit-members#toggleEdits">
          Edit members
        </button>
      </div>


    <% end %>
  </div>

</section>
