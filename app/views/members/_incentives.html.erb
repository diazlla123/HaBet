<!-- Punishments Card -->
  <div class="card my-3">
    <div class="card-header">
      Your Punishments in This Group
    </div>
    <div class="card-body">
      <% if member_punishments.any? %>
        <% member_punishments.each do |mp| %>
          <div class="punishment-item">
            <strong><%= mp.punishment.name %></strong>
            <p>Status: <%= mp.status.capitalize %></p>
            <% if mp.pending? %>
              <%= button_to 'Mark as Done', group_member_member_punishment_path(group, mp.member, mp), method: :patch, class: 'btn btn-warning btn-sm' %>
            <% end %>
          </div>
          <hr>
        <% end %>
      <% else %>
        <p>You have no punishments.</p>
      <% end %>
    </div>
  </div>

  <!-- Rewards Card -->
  <div class="card my-3">
    <div class="card-header">
      Your Rewards in This Group
    </div>
    <div class="card-body">
      <% if member_rewards.any? %>
        <% member_rewards.each do |mr| %>
          <div class="reward-item">
            <strong><%= mr.reward.name %></strong>
            <p>Status: <%= mr.status.capitalize %></p>
            <% if mr.available? %>
              <%= button_to 'Claim Reward', group_member_member_reward_path(group, mr.member, mr), method: :patch, class: 'btn btn-success btn-sm' %>
            <% end %>
          </div>
          <hr>
        <% end %>
      <% else %>
        <p>You have no rewards.</p>
      <% end %>
    </div>
  </div>

<%   console %>
