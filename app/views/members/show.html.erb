
<h1>Hello Seeker of Knowledge</h1>

<%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "profileimg" %>
<h5><%= @user[:username] %></h5>
<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: <%= (@user[:average_progress] || 0) * 100 %>%">
    <%= (@user[:average_progress] || 0) * 100 %>%
  </div>
</div>

<% @tasks.each do |task| %>
    <div class="membercard">
      <h5><%= task.name %>: <%= task.quantity %> <%= task.unit %></h5>
    </div>
  <% end %>

<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
