<h2 class="form-title">Sign up</h2>

<h1 class="form-title">HaBet</h1>
<p class="form-subtitle">Go further together</p>


<div class="container-sm form-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "simple_form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username", placeholder: "JohnDoe", class: "form-control" } %>
      <%= f.input :first_name,
                  required: true,
                  input_html: { autocomplete: "first_name", placeholder: "John", class: "form-control" } %>
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "last_name", placeholder: "Doe", class: "form-control" } %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email", placeholder: "Enter your email", class: "form-control" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder: "Enter your password", class: "form-control" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: "Confirm your password", class: "form-control" } %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-submit" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
