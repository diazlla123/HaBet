<section class="sign-in-container">
  <div class="container-title-habet">
    <h2 class="title">HaBet</h2>
    <p class="form-subtitle">Go further together</p>
  </div>

  <h3 class="form-title">Sign Up</h3>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "simple_form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <h3 class="h3-sing-in">Username</h3>
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username", placeholder: "JohnDoe", class: "form-control" }, label: false %>
      <h3 class="h3-sing-in">First Name</h3>
      <%= f.input :first_name,
                  required: true,
                  input_html: { autocomplete: "first_name", placeholder: "John", class: "form-control" }, label: false %>
      <h3 class="h3-sing-in">Last Name</h3>
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "last_name", placeholder: "Doe", class: "form-control" }, label: false %>
      <h3 class="h3-sing-in">Email</h3>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email", placeholder: "Enter your email", class: "form-control" }, label: false %>
      <h3 class="h3-sing-in">Password</h3>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder: "Enter your password", class: "form-control" }, label: false %>
      <h3 class="h3-sing-in">Password Confirmation</h3>
      <%= f.input :password_confirmation,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder: "Confirm your password", class: "form-control" }, label: false %>
      <h3 class="h3-sing-in">Group Photo</h3>
      <div data-controller='upload-label'>
        <%= f.label :photo, "Upload photo", class: 'custom-file-upload', data: { upload_label_target: 'Label' } %>
        <%= f.input :photo, as: :file, label: false, input_html: { class: 'center-placeholder d-none', data: { upload_label_target: "inputField" , action: "input->upload-label#update"} } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-submit" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= render "devise/shared/links" %>
  </div>
</section>



