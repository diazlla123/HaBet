<table class="table table-bordered">
  <thead>
    <tr>
      <% if data.any? %>
        <% data.first.attributes.keys.reject { |key| ['created_at', 'updated_at'].include?(key) }.each do |key| %>
          <th><%= key.capitalize %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% data.each do |record| %>
      <tr>
        <% record.attributes.reject { |key, _| ['created_at', 'updated_at'].include?(key) }.values.each do |value| %>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
