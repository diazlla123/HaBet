<h3>New Reward</h3>
  <%= simple_form_for [@group, @reward], url: group_reward_path(@group, @group.rewards[0].id), method: :patch do |r| %>
    <%= r.input :name, required: true, placeholder: @group.rewards[0].name %>
    <%= r.hidden_field :group_id, value: @group.id %>
    <%= r.submit "Change reward" %>
  <% end %>
